#!groovy

def postGitHubCommitStatus(String state, String message) {
    withCredentials([string(credentialsId: 'GitHub_API_Token',
            variable: 'api_token')]) {
        sh label: '', script: '''curl -H "Authorization: token ${api_token}" \\
                --request POST \\
                --data \'{"state": "${state}", \\
                            "description": "${message}", \\
                            "target_url": "$BUILD_URL", \\
                            "context": "$AGENT Build"}\' \\
                $PR_STATUSES_URL > /dev/null'''
    }
}

pipeline {
    agent any

    stages {

        stage('Notify') {
            postGitHubCommitStatus("pending", "The build is running")
        }

        stage('Build') {
            steps {
                echo 'Build stage...'
                sh '''
                    cd build/ &&
                    cmake .. &&
                    cmake --build .
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'Test stage...'
                sh '''
                    cd build
                    ctest -T Test
                '''
            }
        }
    }

    post {
        success {
            postGitHubCommitStatus("success", "The build succeeded")
        }

        failure {
            postGitHubCommitStatus("failure", "The build failed")
        }

        cleanup {
            deleteDir()
        }
    }
}

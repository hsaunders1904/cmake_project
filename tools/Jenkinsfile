#!groovy

pipeline {
  agent any

  triggers {
    GenericTrigger(
      genericVariables: [
      [key: 'ref', value: '$.ref']
      ],

      causeString: 'Triggered on $ref',

      token: 'cmake_project_Trigger_Token',

      printContributedVariables: true,
      printPostContent: true,

      silentResponse: false,

      regexpFilterText: '$ref',
      regexpFilterExpression: 'refs/heads/' + BRANCH_NAME
    )
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh '''
          cd build/
          cmake .. -G "Unix Makefiles"
          cmake --build .
        '''
      }
    }

    stage('Test') {
      steps {
        sh '''
          cd build/
          ctest
        '''
      }
    }

  }
}

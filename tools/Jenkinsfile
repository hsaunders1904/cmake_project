#!groovy

pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh '''
          cd build/
          cmake .. -G "Unix Makefiles"
          cmake --build .
        '''
      }
    }

    stage('Test') {
      steps {
        sh '''
          cd build/
          ctest
        '''
      }
    }
  }
}
